package pointless_core;

import ( "crypto/sha1"
       	 "fmt
	 "io"
 )

func crypt_site_password( pwd string ) ( string ){
        h := sha1.New();                                                        
        io.WriteString(h, string);                                              
        io.WriteString(h, "sp1ce");                              
        return fmt.Sprintf("%x", h.Sum(nil) ); 
}